{% extends 'base.html.twig' %}

{% block title %}Espace Admin{% endblock %}

{% block body %}
<h1>Espace Administrateur</h1>
</br>
<form method="GET">
   <div class="row mb-3">
      <input type="text" class="form-control" name="search" id="inputEmail3" placeholder="rechercher avec nom,prÃ©nom ou email">
      <br><br>
      <button class="btn btn-primary">RECHERCHER</button>
    </div>
</form>
<br>
<div class="card-group">
  {% for search_user in search_users %}
    <div class="card" style="width: 18rem;">
         <div class="card-body">
            <h5 class="card-title">{{ search_user.lastname }}  {{ search_user.firstname }}</h5>
            <h6 class="card-subtitle mb-2 text-muted"> {{ search_user.phone }}</h6>
            <p class="card-text">{{ search_user.email }}</p>
            <p class="card-text">{{ search_user.adress }}</p>
            <p class="card-text">{{ search_user.codePostal }}  {{ search_user.city }}</p>
            <a href="{{ path('admin_delete_user',{id:search_user.id}) }}" class="btn btn-danger">Supprimer le compte</a>
        </div>
    </div>     
{% endfor %}
</div>
<h2>Liste des users</h2>
</br>
<div class="card-group">
   {% for user in users %}
     {% if user.roles == ['ROLE_USER'] %}
    <div class="card" style="width: 18rem;">
         <div class="card-body">
            <h5 class="card-title">{{ user.lastname }}  {{ user.firstname }}</h5>
            <h6 class="card-subtitle mb-2 text-muted"> {{ user.phone }}</h6>
            <p class="card-text">{{ user.email }}</p>
            <p class="card-text">{{ user.adress }}</p>
            <p class="card-text">{{ user.codePostal }}  {{ user.city }}</p>
            <a href="{{ path('admin_delete_user',{id:user.id}) }}" class="btn btn-danger">Supprimer le compte</a>
        </div>
    </div> 
  {% endif %}
{% endfor %}
</div>
{% endblock %}
