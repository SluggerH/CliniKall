{% extends 'base.html.twig' %}

{% block title %}Cr√©er un compte professionnel{% endblock %}

{% block body %}

    <div class="container register">
    
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
    
        <h1 class="h1-register">Demande nouveau compte Praticien</h1>

        {{ form_start(ProContactForm) }}

            {{ form_row(ProContactForm.firstname) }}     
            {{ form_row(ProContactForm.lastname) }}
            {{ form_row(ProContactForm.phone) }}
            {{ form_row(ProContactForm.email) }}
            {{ form_row(ProContactForm.plainPassword) }}
            {{ form_row(ProContactForm.descriptionPatient) }}
            {{ form_row(ProContactForm.agreeTerms) }}

            <button class="btn btn-primary" type="submit">Valider</button>
            </br></br>
        {{ form_end(ProContactForm) }}
        
    </div>
    
{% endblock %}

