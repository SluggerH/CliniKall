{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

    <div class="container connexion">

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal h1-connexion">Se connecter</h1>

            <label class="champs-login" for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Votre email" required autofocus>

            <label class="champs-login" for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Votre mot de passe" required>

            <input type="checkbox" id="remember_me" name="_remember_me" checked/>
            <label class="champs-login" for="remember_me">Rester connecté</label>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            </br>
            <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
        </form>

        </br>

        <a href="{{ path('app_register')}}" class="btn btn-success">Pas encore inscrit?</a>
        <a href="{{ path('password_reset')}}" class="btn btn-danger">Mot de passe oublié?</a> 

    </div>

{% endblock %}
